{
  "agent": {
    "title": "Voice Assistant with Available API Keys",
    "initial_greeting": "Hello! I'm your voice assistant powered by the available API services.",
    "prompt": "You are a helpful and informative assistant. Please provide accurate and concise responses.",
    "transport": {
      "type": "small-webrtc"
    },
    "vad": {
      "provider": "silerio"
    },
    "stt": {
      "provider": "deepgram",
      "model": "nova-2"
    },
    "llm": {
      "provider": "cerebras",
      "model": "llama-3.3-70b",
      "tools": ["update_basic_info", "search_tool"]
    },
    "tts": {
      "provider": "smallestai",
      "voice_id": "emily",
      "speed": "1.0"
    },
    "mcp": { 
      "type": "llm_orchestrator",
      "config": {
        "max_turns": 5,
        "response_timeout": 10,
        "history_length": 5,
        "enable_tool_selection": true,
        "tool_selection_strategy": "highest_confidence"
      }
    }
  },
  "pipeline": {
    "name": "llm_agent_pipeline",
    "enable_tracing": true,
    "stages": [
      {
        "type": "input",
        "config": {}
      },
      {
        "type": "vad",
        "config": {}
      },
      {
        "type": "stt",
        "config": {}
      },
      {
        "type": "llm",
        "config": {
          "use_tools": false
        }
      },
      {
        "type": "tts",
        "config": {}
      },
      {
        "type": "output",
        "config": {}
      }
    ]
  }
}
